<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_500">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconoImageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:outlineAmbientShadowColor="@color/black"
                        android:outlineSpotShadowColor="@color/black"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:src="@drawable/outline_account_circle_24" />

                    <TextView
                        android:id="@+id/nombreContacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombreContacto"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textAllCaps="true"
                        android:textStyle="bold">
                    </TextView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:outlineAmbientShadowColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:src="@drawable/outline_home_24" />

                    <TextView
                        android:id="@+id/ciudadContacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/ciudadContacto"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:paddingStart="8dp"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:outlineAmbientShadowColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:src="@drawable/outline_favorite_border_24" />

                    <TextView
                        android:id="@+id/profesionContacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/profesionContacto"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:paddingStart="8dp"
                        >
                    </TextView>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:outlineAmbientShadowColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:src="@drawable/outline_settings_phone_24" />

                    <TextView
                        android:id="@+id/telefonoContacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telefonoContacto"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:paddingStart="8dp"
                        android:layout_marginTop="4dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:outlineAmbientShadowColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:src="@drawable/outline_mark_email_read_20" />

                    <TextView
                        android:id="@+id/emailContacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/emailContacto"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:paddingStart="8dp"
                        android:layout_marginTop="4dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>